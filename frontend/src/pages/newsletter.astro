---
import BaseLayout from "../layouts/BaseLayout.astro";
import MainContentLayout from "../layouts/MainContentLayout.astro";
---

<BaseLayout>
    <MainContentLayout>
        <h1 class="text-center text-violet-700 font-bold">Newsletter</h1>
        <h2 class="text-center font-bold text-6xl m-10">
            Lo ultimo en tecnologia, en espaniol y en tu correo
        </h2>
        <div class="flex flex-col items-center">
            <form action="" class="flex flex-col items-center sm:flex-row">
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Correo electronico"
                    class="rounded p-2 mx-2 my-10 text-black border-2 border-gray-300 dark:border-gray-700"
                />
                <input
                    type="submit"
                    value="Suscribirme"
                    class="cursor-pointer bg-sky-600 dark:bg-green-600 hover:bg-green-600 dark:hover:bg-sky-600 text-white p-2 rounded m-2 hover:transform hover:scale-105 transition-all duration-300 ease-in-out"
                />
            </form>
            <p class="text-center text-xl w-1/2">
                Suscribete a la newsletter para recibir las publicaciones del
                blog directamente en tu correo electronico
            </p>
        </div>
    </MainContentLayout>
</BaseLayout>
